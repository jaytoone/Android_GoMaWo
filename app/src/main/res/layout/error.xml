<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/colorTransparent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ll"
        android:layout_margin="20dp"
        android:background="@drawable/dialog_bg"
        android:orientation="horizontal">


<!--        <ImageView-->
<!--            android:layout_width="100dp"-->
<!--            android:layout_height="100dp"-->
<!--            android:layout_gravity="center_horizontal|center_vertical"-->
<!--            app:srcCompat="@drawable/pig" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_container"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dialog_error1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="고기를 인식하지 못했습니다."
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/dialog_error2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="선명하게 또는 밝게 다시 찍어주세요"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="20sp" />


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/dialog_close_btn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="right"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="닫기"
                    android:textStyle="bold"
                    android:textSize="18sp"/>

            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>